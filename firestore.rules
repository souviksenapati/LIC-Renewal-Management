rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check user role
    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null ? userDoc.data.role : null;
    }
    
    // Policies collection
    match /policies/{policyId} {
      // Everyone authenticated can read policies
      allow read: if request.auth != null;
      
      // Only admins can create/delete policies
      allow create, delete: if request.auth != null && getUserRole() == 'admin';
      
      // Admins can update everything staffand manager can only update receiptUrl/uploadedBy/uploadedAt
      allow update: if request.auth != null && (
        getUserRole() == 'admin' ||
        ((getUserRole() == 'staff' || getUserRole() == 'manager') && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['receiptUrl', 'uploadedBy', 'uploadedAt']))
      );
    }
    
    // All Policies collection (master database)
    match /all_policies/{policyId} {
      // Everyone authenticated can read
      allow read: if request.auth != null;
      
      // Admin and Manager can create
      allow create: if request.auth != null && (getUserRole() == 'admin' || getUserRole() == 'manager');
      
      // Only admin can update and delete
      allow update, delete: if request.auth != null && getUserRole() == 'admin';
    }
    
    // Processing logs - anyone can read, only Cloud Functions write
    match /processing_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Users collection - read-only for own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only backend can create users
    }
  }
}
